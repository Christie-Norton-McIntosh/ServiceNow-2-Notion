# Server Configuration
PORT=3004
BODY_LIMIT=100mb

# ServiceNow-2-Notion Existing Configuration
NOTION_TOKEN=secret_notion_token
NOTION_VERSION=2022-06-28
NOTION_LOG_LEVEL=warn

# Verbose logging flags
SN2N_VERBOSE=0
SN2N_EXTRA_DEBUG=0

# Validation Configuration (existing feature)
SN2N_VALIDATE_OUTPUT=0

# Text Completeness Comparator Configuration
# Comparator thresholds
MAX_CELLS=50000000      # LCS DP guardrail: (n+1)*(m+1)
MIN_SPAN=40             # Min tokens to report a missing span

# Notion Database ID for comparator results
# NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxx

# Optional: append a callout/toggle with missing spans on the page
APPEND_TOGGLE=false     # true => append a callout/toggle with missing spans on the page

# Optional: Bearer token for API authentication
# AUTH_TOKEN=replace-with-secret
